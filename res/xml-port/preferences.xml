<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
      android:title="@string/pref_category_time">
    <EditTextPreference
        android:inputType="number"
        android:dialogTitle="@string/pref_dialog_title_starting_time"
        android:title="@string/pref_title_starting_time"
        android:summary="@string/pref_summary_starting_time"
        android:defaultValue="10"
        android:selectable="true"
        android:enabled="true"
        android:key="prefTime">
    </EditTextPreference>
    <ListPreference
        android:entries="@array/delay_types"
        android:dialogTitle="@string/pref_dialog_title_delay_type"
        android:entryValues="@array/delay_vals"
        android:selectable="true"
        android:summary="@string/pref_summary_delay_type"
        android:enabled="true"
        android:title="@string/pref_title_delay_type"
        android:key="prefDelay"
        android:defaultValue="None">
    </ListPreference>
    <EditTextPreference
        android:inputType="number"
        android:key="prefDelayTime"
        android:summary="@string/pref_summary_delay_length"
        android:title="@string/pref_title_delay_length"
        android:enabled="true"
        android:defaultValue="0"
        android:selectable="true"
        android:dialogTitle="@string/pref_dialog_title_delay_length">
    </EditTextPreference>
  </PreferenceCategory>
  <PreferenceCategory
      android:title="@string/pref_category_other">
    <RingtonePreference
        android:showSilent="true"
        android:enabled="true"
        android:ringtoneType="ringtone|notification|alarm|all"
        android:showDefault="true"
        android:title="@string/pref_title_alert_ringtone"
        android:summary="@string/pref_summary_alert_ringtone"
        android:key="prefAlertSound">
    </RingtonePreference>
    <CheckBoxPreference
        android:title="@string/pref_title_haptic_feedback"
        android:enabled="true"
        android:selectable="true"
        android:defaultValue="false"
        android:summary="@string/pref_summary_haptic_feedback"
        android:summaryOn="@string/pref_summary_haptic_feedback_on"
        android:summaryOff="@string/pref_summary_haptic_feedback_off"
        android:key="prefHaptic">
    </CheckBoxPreference>
  </PreferenceCategory>
  <PreferenceCategory
      android:title="@string/pref_category_about">
    <Preference
        android:key="about"
        android:title="@string/pref_title_about" />
  </PreferenceCategory>
</PreferenceScreen>
